// @Router /api/public/<%= entityVar %>/{id} [get]
func (r *<%= entityVar %>) GetDetails(c *gin.Context) {
  id := converter.MustUint(c.Param("id"))
  
  <%= entityVar %>DTO, success := r.service.FindOne(id)
